---
import '../styles/global.css';

interface Props {
	title?: string;
	description?: string;
}

const { 
	title = "Sentry - Crash Detection for Riders",
	description = "Crash detection IoT device for motorcycle riders"
} = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={description} />
		<title>{title}</title>
	</head>
	<body class="min-h-screen bg-gradient-to-br from-slate-50 via-white to-blue-50 text-slate-900">
		<div class="relative min-h-screen flex flex-col">
			<div class="pointer-events-none absolute inset-0 overflow-hidden">
				<div class="absolute -top-28 -left-28 h-80 w-80 rounded-full bg-blue-400/20 blur-3xl"></div>
				<div class="absolute top-40 -right-32 h-96 w-96 rounded-full bg-indigo-400/20 blur-3xl"></div>
				<div class="absolute -bottom-40 left-1/3 h-96 w-96 rounded-full bg-sky-400/15 blur-3xl"></div>
			</div>
			<div class="flex-1">
				<slot />
			</div>
			<footer class="border-t border-slate-200/60 bg-white/60 backdrop-blur">
				<div class="mx-auto w-full max-w-5xl px-4 py-10">
					<div class="flex flex-col gap-6 sm:flex-row sm:items-center sm:justify-between">
						<div>
							<div class="text-lg font-bold text-slate-900">Sentry</div>
							<div class="mt-1 text-sm text-slate-600">AI-Powered Crash detection for motorists.</div>
						</div>
						<nav class="flex flex-wrap gap-x-6 gap-y-2 text-sm">
							<a href="/" class="text-slate-600 hover:text-slate-900">Home</a>
							<a href="/#learn-more" class="text-slate-600 hover:text-slate-900">Learn More</a>
							<a href="/#team" class="text-slate-600 hover:text-slate-900">Our Team</a>
						</nav>
					</div>
					<div class="mt-6 text-xs text-slate-500">Â© {new Date().getFullYear()} Sentry. All rights reserved.</div>
				</div>
			</footer>
		</div>
	</body>
</html>
